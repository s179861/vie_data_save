<!DOCTYPE html>
<html>
    <head>
	 <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" integrity="sha512-dTfge/zgoMYpP7QbHy4gWMEGsbsdZeCXz7irItjcC3sPUFtf0kuFbDz/ixG7ArTxmDjLXDmezHubeNikyKGVyQ==" crossorigin="anonymous">
        <style type="text/css">
        /*<![CDATA[ */
            body {
                background-color: orange;
            }

            .naglowek {
                background-color: orange;
            }

            .stopka {
                background-color: black;
                color: white;
            }

            .srodek {
                background-color: orange;
            }

            .pasek {
                background-color: orange;
            }

            .zawartosc {
                background-color: white;
            }

	    .spod_zawartosci {
		padding: 15px;
	    }

            .numer_strony {
                text-align: center;
	    }

	    .lewy {
		text-align: left;
	    }

	    .prawy {
		text-align: right;
	    }
        /* ]]>*/
        </style>
    </head>
    <body>
        <div class="naglowek col-xs-12 col-sm-12 col-md-12 col-lg-12">

        </div>
        <div class="srodek">
            <center><h1>{{ title }}</h1></center>
        </div>
        <div class="pasek col-xs-12 col-sm-12 col-md-2 col-lg-2">
           <table id="linki_stron"></table> 
        </div>
        <div class="zawartosc col-xs-12 col-sm-12 col-md-10 col-lg-10">
                {{ content }}
            <div class="spod_zawartosci col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="lewy col-xs-4 col-sm-4 col-md-4 col-lg-4">
                   <a href={{ back_page }}>{{ back_page_text }}</a>
                </div>
                <div class="numer_strony col-xs-4 col-sm-4 col-md-4 col-lg-4"/>
                    Strona {{ page_number }} na {{ pages_quantity }}
                </div>
                <div class="prawy col-xs-4 col-sm-4 col-md-4 col-lg-4">
                    <a href={{ next_page }}>{{ next_page_text }}</a>
                </div>
            </div>
	</div>
        <div class="stopka col-xs-12 col-sm-12 col-md-12 col-lg-12">
            Rados≈Çaw Celary</br>
        </div>
	<script type="text/javascript">
	    for(var i = 0 ; i < {{ pages_quantity }} ; i++) {
		var tr = document.createElement('tr');
		var td = document.createElement('td');
		var element = document.createElement('a');
		element.href = i;
		var text = document.createTextNode('Strona '+(i+1));

		tr.appendChild(td);
		td.appendChild(element);
		element.appendChild(text);

	        var body = document.getElementById('linki_stron');
	        body.appendChild(tr);
	    }
	</script>
    </body>
</html>
